/*PREFABS TABS*/

.prefabs-tabs .prefab-replace-btn
{
	transition-duration: 0.15s;
	transition-property: translate;
	translate: 0px 135px;
	transition-timing-function: ease-out;
}

.prefabs-tabs .tab:hover .prefab-replace-btn
{
	translate: 0px 80px;
}

.prefabs-tabs .tabs .tab
{
	width: 150px;
	overflow: hidden;
}


.prefabs-tabs .tabs 
{
	flex-direction: row;
	flex-wrap: wrap;
}

.prefabs-tabs .tabs .selected
{
	background-color: var(--selected-color);
	border-color: var(--selected-color);
	border-width: 2px;
}

/*END PREFABS TABS*/



/*PALETTE SET ELEMENT*/

.palette-set-element 
{
	flex-direction: row;
	border-color: var(--border-color);
	border-bottom-width: 1px;
	padding-top: 2px;
	justify-content: space-between;
}

.palette-set-element-buttons
{
	flex-direction: row;
}

.palette-set-element-label
{
}


.palette-set-editing-header
{
	flex-direction: row;
}

.palette-set-editing-header .title-label
{
	/*-unity-text-align: upper-right;*/
	font-size: 14px;
	-unity-font-style: bold;
	/*position: absolute;*/
}


/*END PALETTE SET ELEMENT*/


/*Module Palette*/

.palettes-view
{
	flex-direction: column;
	justify-content: space-between;
}

.module-palette
{
	padding-top: 10px;
	padding-bottom: 5px;
	border-color: var(--border-color);
	border-bottom-width: 1px;
}

.module-palette .header
{
	flex-direction: row;
	justify-content: space-between;
}

.module-palette .header .selection-menu
{
	width: 200px;
}

.module-palette .prefab-property
{
	flex-direction: column;
}

.module-palette .grid
{
	padding: 4px;
	flex-direction: row;
	flex-wrap: wrap;
}

.module-palette .prefab-property .preview
{
	width: 75px;
	height: 75px;
	-unity-background-scale-mode: stretch-to-fill;
	border-color: black;
	border-width: 1px;
	border-radius: 5px;
}

.module-palette .prefab-property .preview:hover
{
	border-color: var(--border-color);
	border-width: 2px;
}

.module-palette .prefab-property .selected
{
	border-color: var(--border-color);
	border-width: 2px;
}

.module-palette .prefab-property .object-field
{
	width: 75px;
}

.module-palette .delete-btn
{
	width: 20px;
	height: 18px;
}

.prefab-property .preview:hover .delete-btn
{
	opacity: 1;
}

.prefab-property .delete-btn
{
	opacity: 0;
	transition: 0.15s;
	transition-duration: 0.15s;
}



/*End Module Palette*/


/*Delete Button*/



.delete-btn
{
	width: 17px;
	height: 15px;
	align-self: flex-end;
}


.delete-btn:hover
{
	background-color: red;
}

.delete-btn:active
{
	background-color: var(--focus-color);
}

/*End Delete Button*/