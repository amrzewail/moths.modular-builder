:root
{
	--selected-color: #116D6E; /*cyan?*/
	--level-color: #CD1818; /*reddish*/
	--hover-color: #116D6E; /*cyan?*/
	--focus-color: #116D6E; /*cyan?*/
	--border-color: #116D6E; /*cyan?*/
}

/*BUTTONS*/

.back-button
{
	align-self: flex-start;
}

/*END BUTTONS*/

/*BUTTON TABS*/

ButtonTabs
{
	border-color: black;
	/*border-bottom-width: 1px;*/
	/*background-color: rgba(255, 255, 255, 0.2);*/
	height: auto;
}

ButtonTabs .buttons-container 
{
	display:flex;
	flex-direction: row;
	justify-content: center;
	flex-wrap: wrap;
	padding: 5px 0;
	align-items: center;
}

ButtonTabs Label
{
	font-size: 15px;
	-unity-font-style: bold;
	-unity-text-align: upper-center;

	margin-bottom: 5px;
	border-style: solid;
	padding: 4px;
	width: 100px;
	border-color: black;
	border-bottom-width: 1px;
}

ButtonTabs .buttons-container Button
{
	transition: 0.15s;
	padding: 3px;
	display: flex;
}

ButtonTabs .buttons-container Button:focus
{
	border: 1px;
	border-color: blue;
}

ButtonTabs .buttons-container Button.selected
{
	background-color: var(--selected-color);
	border-color: var(--selected-color);
	border-width: 3px;
}


ButtonTabs .buttons-container Button:hover
{
	color: black;
}

.edit-tabs .buttons-container
{
	display: flex;
	padding: 0;
}

.edit-tabs .buttons-container Button
{
	flex: 1;
	-unity-font-style: bold;
	font-size: 14px;
}

/*END BUTTON TABS*/


/*SHOW LEVELS TOGGLE*/


.show-levels
{
	/*background-color: rgba(255, 255, 255, 0.2);*/
	padding: 4px;
	border-width: none;
}


/*END SHOW LEVELS TOGGLE*/


/*HEIGHT TABS*/

.height-tabs-container
{
}

.height-tabs-container .buttons-container Button
{
	border-radius: 50%;
	width: 20px;
	height: 20px;
	font-size: 10px;
}


/*END HEIGHT TABS*/

